# Database Configuration
POSTGRES_USER=botuser
POSTGRES_PASSWORD=secure_password_here
POSTGRES_DB=trading_bot
DATABASE_URL=postgresql://botuser:secure_password_here@postgres:5432/trading_bot

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# API Keys
NEWSAPI_KEY=your_newsapi_key_here
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_ORG_ID=org-your-org-id-here
OPENAI_TIMEOUT=60

# Broker Configuration - OANDA
OANDA_TOKEN=your-oanda-token-here
OANDA_ACCOUNT=your-oanda-account-id-here
OANDA_ENVIRONMENT=practice

# Broker Configuration - Bitget (for BTC)
BITGET_KEY=your-bitget-api-key-here
BITGET_SECRET=your-bitget-secret-here
BITGET_PASS=your-bitget-passphrase-here
BITGET_SANDBOX=true

# Trading Configuration
FX_PAIR_NAME=USD/JPY
FX_PAIR_TICKER=USDJPY=X
DEFAULT_LOT_SIZE=0.1
DEFAULT_STOP_LOSS_PIPS=50
DEFAULT_TAKE_PROFIT_PIPS=150
SPREAD_PIPS=0.2

# Data Collection Settings
FETCH_PRICE_DAYS_BACK=90
FETCH_NEWS_DAYS_BACK=29
PRICE_COLLECTION_INTERVAL_MINUTES=1
NEWS_COLLECTION_INTERVAL_MINUTES=5

# AI Configuration
DEFAULT_AI_MODELS=gpt-4o,gpt-3.5-turbo
MAX_PARALLEL_AI_REQUESTS=3

# Logging
LOG_LEVEL=INFO
LOG_TO_FILE=true

# Security
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_PORT=8501